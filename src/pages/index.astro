---
import Layout from '~/layouts/Layout.astro';
import { resources, categories } from '~/data/resources';

const groupedResources = categories.map((category) => ({
  category,
  items: resources.filter((r) => r.category === category),
}));
---

<Layout title="resources.danieljsmith.org">
  <div class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="border-b border-slate-700/50 bg-slate-900/80 backdrop-blur-md sticky top-0 z-40">
      <div class="max-w-7xl mx-auto px-4 md:px-6 min-h-[60px] flex items-center justify-between">
        <a href="/" class="flex items-center transition-colors duration-300 py-9">
          <span class="text-2xl md:text-3xl font-bold text-white whitespace-nowrap">
            resources.danieljsmith.org
          </span>
        </a>
        <div class="flex items-center gap-6">
          <a
            href="https://tuition.danieljsmith.org"
            class="text-[0.9375rem] text-blue-400 hover:text-blue-300 transition-colors whitespace-nowrap font-medium tracking-[0.01rem]"
          >
            Tuition →
          </a>
          <a
            href="https://danieljsmith.org"
            class="text-[0.9375rem] text-slate-400 hover:text-blue-400 transition-colors whitespace-nowrap font-medium tracking-[0.01rem]"
          >
            ← Main Site
          </a>
        </div>
      </div>
    </header>

    <!-- Decorative gradient orbs -->
    <div class="fixed top-20 right-0 w-96 h-96 bg-gradient-to-br from-blue-600/20 to-indigo-600/10 rounded-full blur-3xl -z-10 pointer-events-none" aria-hidden="true"></div>
    <div class="fixed bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-indigo-600/20 to-blue-600/10 rounded-full blur-3xl -z-10 pointer-events-none" aria-hidden="true"></div>

    <!-- Main Content -->
    <main class="flex-1 max-w-6xl mx-auto px-4 py-12 w-full">
      {resources.length === 0 ? (
        <div class="text-center py-16">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-800 text-blue-400 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <p class="text-xl text-slate-300 mb-2">Resources coming soon</p>
          <p class="text-slate-500">Check back later for practice papers and study materials.</p>
        </div>
      ) : (
        groupedResources.map(({ category, items }) => (
          <section class="mb-12">
            <h2 class="text-lg font-semibold text-white mb-6 flex items-center gap-3">
              <span class="w-8 h-0.5 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full"></span>
              {category}
            </h2>
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
              {items.map((resource) => (
                <a
                  href={`/view/${resource.id}`}
                  class="group block p-5 rounded-xl bg-slate-800/50 border border-slate-700/50 hover:border-blue-500/50 hover:bg-slate-800/80 transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-blue-500/10"
                >
                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-br from-blue-600/20 to-indigo-600/20 flex items-center justify-center text-blue-400 group-hover:from-blue-600/30 group-hover:to-indigo-600/30 transition-colors">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="font-medium text-white group-hover:text-blue-300 transition-colors truncate">
                        {resource.title}
                      </h3>
                      <p class="text-sm text-slate-400 mt-1">
                        {resource.description}
                      </p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </section>
        ))
      )}
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-700/50 mt-auto">
      <div class="max-w-6xl mx-auto px-4 py-6 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-slate-400">
        <p>&copy; {new Date().getFullYear()} Daniel James Smith</p>
        <a
          href="https://danieljsmith.org"
          class="hover:text-blue-400 transition-colors"
        >
          ← Back to main site
        </a>
      </div>
    </footer>
  </div>
</Layout>
